  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Font",
        "info": "Selecting different fonts can affect the speed of your store. [Learn more about system fonts.](https://help.shopify.com/manual/online-store/os/store-speed/improving-speed#fonts)"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body text"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Font",
        "info": "Selecting different fonts can affect the speed of your store. [Learn more about system fonts.](https://help.shopify.com/manual/online-store/os/store-speed/improving-speed#fonts)"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body text scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 10,
        "default": 1200,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Spacing between sections",
        "default": 0
      }
    ]
  },
  {
    "name": "Product Variant Picker",
    "settings": [
      {
        "type": "header",
        "content": "Variant Selection Behavior"
      },
      {
        "type": "select",
        "id": "variant_selection_behavior",
        "label": "Default variant selection",
        "options": [
          {
            "value": "auto_select_first",
            "label": "Auto-select first available variant"
          },
          {
            "value": "preselect_from_url",
            "label": "Pre-select from URL parameter"
          },
          {
            "value": "require_selection",
            "label": "Require customer selection"
          }
        ],
        "default": "auto_select_first"
      },
      {
        "type": "checkbox",
        "id": "enable_variant_images",
        "label": "Show variant images",
        "info": "Display different images when variants are selected",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_dynamic_pricing",
        "label": "Show dynamic pricing",
        "info": "Update price display when variants change",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_variant_availability",
        "label": "Show availability status",
        "info": "Display 'Available' or 'Sold out' for variants",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_variant_url_updates",
        "label": "Update URL with variant selection",
        "info": "Change browser URL when variant is selected",
        "default": true
      },
      {
        "type": "header",
        "content": "Accessibility Features"
      },
      {
        "type": "checkbox",
        "id": "enable_screen_reader_announcements",
        "label": "Screen reader announcements",
        "info": "Announce variant changes to screen readers",
        "default": true
      }
    ]
  },
