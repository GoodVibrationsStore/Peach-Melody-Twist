{%- comment -%} 
  Enhanced, fully customizable marquee section: 
  - Gradients, glow, pause-on-hover, animated emoji, pastel & neon palette, and more. 
  - Supports emojis, custom font, and responsive design. 
  - All settings are editable in the Shopify customizer. 
{%- endcomment -%}

<section class="marquee-section" style="
    background: {{ section.settings.bg_color }};
    {% if section.settings.gradient_bg != blank %}background-image: {{ section.settings.gradient_bg }};{% endif %}
    padding: {{ section.settings.padding }}px 0;
  ">
  <div
    class="cool-marquee{% if section.settings.glow %} marquee-glow{% endif %}"
    style="
      color: {{ section.settings.text_color }};
      font-size: {{ section.settings.font_size }}px;
      font-family: {{ section.settings.font_family | default: 'inherit' }};
      {% if section.settings.text_shadow %}text-shadow: 0 0 8px {{ section.settings.text_color }}, 0 0 16px {{ section.settings.text_color }}, 0 0 24px {{ section.settings.text_color }}88;{% endif %}
      {% if section.settings.neon %}filter: drop-shadow(0 0 6px {{ section.settings.text_color }});{% endif %}
    "
    tabindex="0"
    role="marquee"
    aria-label="Site announcement"
    data-direction="{{ section.settings.direction }}"
    data-speed="{{ section.settings.speed }}">
    <span class="marquee-emoji cool-emoji{% if section.settings.emoji_glow %} emoji-glow{% endif %}">
      {{ section.settings.emoji | default: "ðŸŒˆ" }}
    </span>
    <span>{{ section.settings.text }}</span>
  </div>
</section>

{% schema %}
  {
    "name": "Marquee",
    "settings": [
      {
        "type": "text",
        "id": "text",
        "label": "Marquee text",
        "default": "ðŸŒˆ Welcome to our store! ðŸš€ Use emojis and have fun! ðŸ˜Ž"
      },
      {
        "type": "text",
        "id": "emoji",
        "label": "Leading emoji",
        "default": "ðŸŒˆ"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color",
        "default": "#fffbe7"
      },
      {
        "type": "text",
        "id": "gradient_bg",
        "label": "Gradient background (CSS)",
        "default": "linear-gradient(90deg, #ffd1dc 0%, #a7c7e7 100%)",
        "info": "Optional: CSS gradient for background (overrides solid color)"
      },
      {
        "type": "select",
        "id": "direction",
        "label": "Scroll direction",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      },
      {
        "type": "range",
        "id": "speed",
        "label": "Scroll speed",
        "min": 1,
        "max": 20,
        "step": 1,
        "default": 5
      },
      {
        "type": "range",
        "id": "font_size",
        "label": "Font size (px)",
        "min": 12,
        "max": 64,
        "step": 1,
        "default": 24
      },
      {
        "type": "text",
        "id": "font_family",
        "label": "Font family (CSS)",
        "default": "",
        "info": "Optional: e.g. 'Comic Sans MS', 'Arial Black', cursive"
      },
      {
        "type": "range",
        "id": "padding",
        "label": "Vertical padding (px)",
        "min": 0,
        "max": 60,
        "step": 2,
        "default": 12
      },
      {
        "type": "checkbox",
        "id": "glow",
        "label": "Enable text glow",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "emoji_glow",
        "label": "Enable emoji glow",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "text_shadow",
        "label": "Enable text shadow",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "neon",
        "label": "Enable neon effect",
        "default": false
      }
    ],
    "presets": [
      {
        "name": "Marquee",
        "category": "Text"
      }
    ]
  }
{% endschema %}

<style>
  .cool-marquee {
    display: flex;
    align-items: center;
    overflow: hidden;
    white-space: nowrap;
    padding: 0.5em 1.2em;
    min-height: 2.5em;
    position: relative;
    transition: box-shadow 0.2s
    , background 0.3s;
    animation-play-state: running;
    opacity: 0;
    animation-name: marquee-fadein
    , marquee-scroll-left;
    animation-duration: 0.8s
    , 20s;
    animation-delay: 0s
    , 0s;
    animation-fill-mode: forwards
    , none;
    animation-iteration-count: 1
    , infinite;
    animation-timing-function: ease
    , linear;
  }
  .cool-marquee[data-direction="right"] {
    animation-name: marquee-fadein
    , marquee-scroll-right;
  }
  .cool-marquee:hover,
  .cool-marquee:focus {
    animation-play-state: paused !important;
    cursor: pointer;
    box-shadow: 0 6px 32px 0 #0003;
  }
  .marquee-emoji.cool-emoji {
    margin-right: 0.5em;
    font-size: 1.2em;
    animation: emoji-bounce 1.6s infinite cubic-bezier(0.4,0,0.2,1);
    will-change: transform;
  }
  @keyframes emoji-bounce {
    0,
    100% {
      transform: translateY(0);
    }
    20% {
      transform: translateY(-0.25em) scale(1.15);
    }
    40% {
      transform: translateY(0.1em) scale(0.95);
    }
    60% {
      transform: translateY(-0.15em) scale(1.08);
    }
    80% {
      transform: translateY(0);
    }
  }
  .marquee-glow,
  .emoji-glow {
    text-shadow: 0 0 8px #fff
    , 0 0 16px #fcb900
    , 0 0 24px #fcb90088;
  }
  .cool-marquee {
    font-size: clamp(1em, 2vw, 2.5em);
  }
  @keyframes marquee-scroll-left {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  @keyframes marquee-scroll-right {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  @keyframes marquee-fadein {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: none;
    }
  }
  @media (max-width: 600px) {
    .cool-marquee {
      font-size: clamp(1em, 4vw, 2em);
      padding: 0.5em;
    }
  }
  @media (prefers-reduced-motion: reduce) {
    .cool-marquee {
      animation: none !important;
    }
    .marquee-emoji.cool-emoji {
      animation: none !important;
    }
  }
</style>