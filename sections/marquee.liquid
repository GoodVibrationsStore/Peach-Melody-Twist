<style>
  .cool-marquee {
    display: flex;
    align-items: center;
    overflow: hidden;
    white-space: nowrap;
    padding: 0.5em 1.2em;
    min-height: 2.5em;
    position: relative;
    transition: box-shadow 0.2s
    , background 0.3s;
    animation-play-state: running;
    opacity: 0;
    animation-name: marquee-fadein
    , marquee-scroll-left;
    animation-duration: 0.8s
    , 20s;
    animation-delay: 0s
    , 0s;
    animation-fill-mode: forwards
    , none;
    animation-iteration-count: 1
    , infinite;
    animation-timing-function: ease
    , linear;
  }
  .cool-marquee[data-direction="right"] {
    animation-name: marquee-fadein
    , marquee-scroll-right;
  }
  .cool-marquee:hover,
  .cool-marquee:focus {
    animation-play-state: paused !important;
    cursor: pointer;
    box-shadow: 0 6px 32px 0 #0003;
  }
  .marquee-emoji.cool-emoji {
    margin-right: 0.5em;
    font-size: 1.2em;
    animation: emoji-bounce 1.6s infinite cubic-bezier(0.4,0,0.2,1);
    will-change: transform;
  }
  @keyframes emoji-bounce {
    0,
    100% {
      transform: translateY(0);
    }
    20% {
      transform: translateY(-0.25em) scale(1.15);
    }
    40% {
      transform: translateY(0.1em) scale(0.95);
    }
    60% {
      transform: translateY(-0.15em) scale(1.08);
    }
    80% {
      transform: translateY(0);
    }
  }
  .marquee-glow,
  .emoji-glow {
    text-shadow: 0 0 8px #fff
    , 0 0 16px #fcb900
    , 0 0 24px #fcb90088;
  }
  .cool-marquee {
    font-size: clamp(1em, 2vw, 2.5em);
  }
  @keyframes marquee-scroll-left {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
  @keyframes marquee-scroll-right {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100%);
    }
  }
  @keyframes marquee-fadein {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: none;
    }
  }
  @media (max-width: 600px) {
    .cool-marquee {
      font-size: clamp(1em, 4vw, 2em);
      padding: 0.5em;
    }
  }
  @media (prefers-reduced-motion: reduce) {
    .cool-marquee {
      animation: none !important;
    }
    .marquee-emoji.cool-emoji {
      animation: none !important;
    }
  }
</style>